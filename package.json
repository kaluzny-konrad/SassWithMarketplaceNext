{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env nodemon",
    "build:server": "tsc --project tsconfig.server.json",
    "build:copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "build:next": "cross-env NEXT_BUILD=true node dist/server.js",
    "build": "cross-env NODE_ENV=production npm run build:server && npm run build:copyfiles && npm run build:next",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "next lint"
  },
  "dependencies": {
    "@vercel/analytics": "^1.1.1",
    "express": "^4.18.2",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "nodemon": "^3.0.2",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
